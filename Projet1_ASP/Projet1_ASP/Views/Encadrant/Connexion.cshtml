
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_MonLayout.cshtml";

}


<section id="encadrant" class="about">
    <div class="container">

        <div class="row no-gutters">
            <div class="col-lg-6 video-box">
                <img src="Content/img/ENSA.jpg" class="img-fluid" alt="">
                <a href="https://www.youtube.com/watch?v=MCXg6gWM9Zw" class="venobox play-btn mb-4" data-vbtype="video" data-autoplay="true"></a>
            </div>

            <div class="col-lg-6 d-flex flex-column justify-content-center about-content">

                <div class="section-title">
                    <h2>Espace Encadrant</h2>


                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            @Html.TextBox("email",null, new { @class = "form-control", @placeholder = "Entrer Email" })

                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Mot de passe</label>
                            @Html.Password("password",null, new { @class = "form-control", @placeholder = "Mot de passe" })
                        </div>
                        <button type="submit" name="seconnecter" value="encadrant" class="btn btn-primary">Valider</button>
                    }
                    <br />

                    @Html.ActionLink("s'inscrire", "Inscription", "Encadrant")

                </div>



            </div>
        </div>

    </div>
</section>
