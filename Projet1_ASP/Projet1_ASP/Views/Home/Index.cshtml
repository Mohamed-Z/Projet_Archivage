<section id="etudiant" class="about">
    <div class="container">

        <div class="row no-gutters">
            <div class="col-lg-6 video-box">
                <img src="Content/img/ENSA.jpg" class="img-fluid" alt="">
                <a href="https://www.youtube.com/watch?v=MCXg6gWM9Zw" class="venobox play-btn mb-4" data-vbtype="video" data-autoplay="true"></a>
            </div>

            <div class="col-lg-6 d-flex flex-column justify-content-center about-content">

                <div class="section-title">
                    <h2>Espace Etudiant</h2>


                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                     <label for="exampleInputEmail1">Email address</label>
                      @Html.TextBoxFor(m =>m.email, new { @class = "form-control" , @placeholder = "Entrer Email" })
                       <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>

                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            @Html.PasswordFor(m => m.password, new { @class = "form-control", @placeholder = "Password" })
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Check me out</label>
                        </div>
                        <button type="submit" name="seconnecter" value="etudiant" class="btn btn-primary">Submit</button>
                    }
                    <br />

                    @Html.ActionLink("s'inscrire", "inscription", "Etudiant")

                </div>



            </div>
        </div>

    </div>
</section>




<section id="professeur" class="portfolio section-bg">
    <div class="container">

        <div class="row no-gutters">
            <div class="col-lg-6 video-box">
                <img src="Content/img/ENSA.jpg" class="img-fluid" alt="">
                <a href="https://www.youtube.com/watch?v=MCXg6gWM9Zw" class="venobox play-btn mb-4" data-vbtype="video" data-autoplay="true"></a>
            </div>

            <div class="col-lg-6 d-flex flex-column justify-content-center about-content">

                <div class="section-title">
                    <h2>Espace Professeur</h2>


                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <input type="email" class="form-control" name="emailp" id="emailp" aria-describedby="emailHelp" placeholder="Enter email">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" name="passp" id="passp" placeholder="Password">
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Check me out</label>
                    </div>
                    <button type="submit" name="seconnecter" value="etudiant" class="btn btn-primary">Submit</button>
                    }
                    <br>
                    @Html.ActionLink("s'inscrire", "inscription","Etudiant")

                </div>



            </div>
        </div>

    </div>
</section>
