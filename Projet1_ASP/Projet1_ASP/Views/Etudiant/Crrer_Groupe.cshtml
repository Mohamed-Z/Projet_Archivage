
@{
    ViewBag.Title = "Création de Groupe";
    Layout = "~/Views/Shared/_MonLayout.cshtml";
}
    <div class="container border mb-2 p-3 border">

        <div class="row border-bottom m-1">
            @Html.Partial("_GroupeNavBar")

        </div><br />
        <h3 align="center">Archivage d'un projet</h3><br /><br />
        <div class="col-lg-6 d-flex flex-column justify-content-center about-content" style="margin-left: auto;margin-right: auto">

            @using (Html.BeginForm("espaceetudiant", "Etudiant", FormMethod.Post))
            {
                <label>Tout d'abord, Choisissez le type de votre projet.</label>
                @Html.DropDownList("type", ViewBag.type as SelectList, "selectionner le type de projet ", new { @class = "form-control" })<br /><br />
                <div align="center">
                    <button style="margin-left: auto;margin-right: auto" type="submit" name="creation" value="etudiant" class="btn btn-primary">Créer un groupe/ Ajouter des membres/ archiver votre fichier</button>

                </div>
            }
        </div>
        <br>

    </div>
